<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/accelerometer"
        android:layout_width="145dp"
        android:layout_height="101dp"
        android:layout_marginTop="152dp"
        android:text="Accelerometer"
        app:layout_constraintEnd_toStartOf="@+id/lightTextView"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/accelerometerTextView"
        android:layout_width="227dp"
        android:layout_height="108dp"
        android:layout_marginEnd="16dp"
        android:hint="Accelerometer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lightTextView"
        app:layout_constraintVertical_bias="0.508" />

    <Button
        android:id="@+id/light"
        android:layout_width="142dp"
        android:layout_height="106dp"
        android:text="Light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/accelerometerTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accelerometer" />

    <TextView
        android:id="@+id/lightTextView"
        android:layout_width="221dp"
        android:layout_height="99dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="20dp"
        android:hint="Light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>